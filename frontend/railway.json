{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "flutter pub get && flutter build web --release --web-renderer html --base-href /"
  },
  "deploy": {
    "startCommand": "python3 -m http.server 8080 --directory build/web",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  },
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
